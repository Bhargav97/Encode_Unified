<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutGRDDJK"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragContainerDijkstrasInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/fragContainerDijkstrasInput"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"></LinearLayout>

    <TextView
        android:id="@+id/textView3GRDDJK"
        android:layout_marginTop="25dp"
        android:layout_below="@id/fragContainerDijkstrasInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Minimum distance will appear here"/>
    <TextView
        android:id="@+id/textView4GRDDJK"
        android:layout_marginTop="25dp"

        android:layout_below="@id/textView3GRDDJK"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="top"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Your chosen mode of Breadth-First or Depth-First Traversal will appear here"/>

</RelativeLayout>